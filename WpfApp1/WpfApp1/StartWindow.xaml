<Window x:Class="WpfApp1.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:li="http://github.com/zeluisping/loadingIndicators/xaml/controls"
        Title="NBA Browser" Height="700" Width="800">
    <StackPanel VerticalAlignment="Bottom" Margin="50">
        <Label x:Name="QSLabel" Content="Query size (no limit if not filled)" Foreground="White" HorizontalAlignment="Center"/>
        <TextBox x:Name="QuerySizeTextBox" Width="150" Background="Transparent" Foreground="White" Margin="10"/>
        <Button x:Name="SearchBtn" Click="Search" Content="Search Players" Width="150" Background="Transparent" BorderBrush="White" BorderThickness="2" Foreground="White"/>
    </StackPanel>
</Window>
