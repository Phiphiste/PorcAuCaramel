<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <ComboBox  ItemsSource="{Binding Countries}" DisplayMemberPath="name"  Width="150" />
        <Button x:Name="MonPremierBouton" Click="Rechercher"> Rechercher </Button>
        <Label x:Name="LabelCapital">
            <TextBlock TextWrapping="Wrap" Text="{Binding currentCapital}"/>
        </Label>
    </StackPanel>
</Window>
