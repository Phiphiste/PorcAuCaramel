<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <ComboBox  x:Name="Players" ItemsSource="{Binding Players}" DisplayMemberPath="last_name"  Width="150" Margin="161,50,161,0" />
        <Button x:Name="MonPremierBouton" Click="Rechercher" Margin="161,50,161,0" Content="Rechercher"/>
        
        <Border BorderBrush="{x:Null}" Height="50">
            <TextBlock x:Name="Selected_player_first_name" Text="{Binding Selected_player.first_name}"  TextWrapping="Wrap"  HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Border>
        <Border BorderBrush="{x:Null}" Height="50">
            <TextBlock x:Name="Selected_player_last_name" Text="{Binding Selected_player.last_name}"  TextWrapping="Wrap"  HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Border>
    </StackPanel>
</Window>
